@model DAL.Entities.Account;
@{
    ViewData["Title"] = "Deposit";
}



<link rel="stylesheet" href="~/css/ui.css">
<h2>Deposit</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Deposit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="AccountNo" style="background-color: black" disabled="disabled" class="form-control" />
            </div>
            <label style="width: 300px;" width="200px;">@ViewBag.BalanceText</label>
            <div class="form-group">
                <label class="control-label">Amount</label>
                <input asp-for="Amount" value="" placeholder="Enter Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <label>@ViewBag.BalanceText</label>
            <div class="form-group">
                <input type="submit" value="Process" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
