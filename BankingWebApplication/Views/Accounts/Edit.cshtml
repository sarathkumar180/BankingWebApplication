@model DAL.Entities.Account

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="AccountNo" />
            <div class="form-group">
                <label asp-for="AccountType" class="control-label"></label>
                <input asp-for="AccountType" class="form-control" />
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerNo" class="control-label"></label>
                <select asp-for="CustomerNo" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="AccountStatus" /> @Html.DisplayNameFor(model => model.AccountStatus)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Interestrate" class="control-label"></label>
                <input asp-for="Interestrate" class="form-control" />
                <span asp-validation-for="Interestrate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

