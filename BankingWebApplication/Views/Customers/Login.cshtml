@model DAL.Entities.User

@{
    ViewData["Title"] = "Login";
}
    <link rel="stylesheet" href="~/css/ui.css">

<h2>Login</h2>

<body>
<div class="row">
    <div class="col-md-4 ">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="UserName" label class="control-label">UserName</label>
                <input asp-for="UserName" class="form-control" placeholder="Enter User Name">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter Passowrd">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <label class="label-success">@ViewBag.LoginSucceed</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <label class="label-danger">@ViewBag.LoginFailed</label>
                </div>
            </div>

          

        </form>
    </div>
 </div>

    </body>
