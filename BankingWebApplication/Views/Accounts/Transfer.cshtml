@model DAL.Entities.TransferAccount
@{
    ViewData["Title"] = "Transfer";
}

<link rel="stylesheet" href="~/css/ui.css">

<h2>Transfer</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Transfer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input value="@Model.account.AccountNo"name="FromAccountNo" disabled="disabled" class="form-control" />
            </div>

            <div class="form-group">
            <label class="control-label"></label>
            <select name="ToAccountNo" class="form-control">

                @foreach (var item in Model.accounts)
                {
                    if (item.AccountStatus) // display only active account
                    {
                        <option value="@item.AccountNo">@item.AccountType | @item.AccountNo | @item.Balance</option>
                    }

                }
            </select>
            </div>

            <div class="form-group">
                <label class="control-label">Amount</label>
                <input name="amount"  placeholder="Enter Amount" class="form-control" />
                @*<span asp-validation-for="Amount" class="text-danger"></span>*@
            </div>

            <div class="form-group">
                <input type="submit" value="Process" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>