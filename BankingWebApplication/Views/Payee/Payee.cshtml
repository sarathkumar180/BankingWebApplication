@model DAL.Entities.Payee

@{ ViewData["Title"] = "Edit"; }

<link rel="stylesheet" href="~/css/ui.css">
@if (ViewBag.IsNewPayee)
{
<h2>Add Payee details</h2> }
            else
            {
<h2>Edit Payee details</h2>}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Payee" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="IsActive" />
            <input type="hidden" asp-for="CustomerNo" />
            <div class="form-group">
                <label asp-for="PayeeName" class="control-label"></label>
                <input asp-for="PayeeName" class="form-control" />
                <span asp-validation-for="PayeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayeeAccountNumber" class="control-label">Payee Account Number</label>
                <input asp-for="PayeeAccountNumber" class="form-control" />
                <span asp-validation-for="PayeeAccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankCode" class="control-label"></label>
                <input asp-for="BankCode" class="form-control" />
                <span asp-validation-for="BankCode" class="text-danger"></span>
            </div>
            <div class="form-group">
            @if (ViewBag.IsNewPayee)
            {
                <input type="submit" value="Add Payee" class="btn btn-default"/>
            }
            else
            {
                <input type="submit" value="Update Payee" class="btn btn-default"/>
            }
            </div>



        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
